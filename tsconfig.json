{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "jsx": "react-jsx",
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist/",
      "experimentalDecorators": true
    },
    "include": [
      "./src/",
    ],
    "exclude": [
      "node_modules",
    ],
    "files": ["./src/index.d.ts"]
  }